<div class="container">
  <%= form_with url: '/site/update_user' do %>
    <div class="row">
      <div class="col-12">
        <h1>C’est presque terminé !</h1>
      </div>
      <div class="col-6 d-flex justify-content-start">
        <p>Quel est votre âge ?</p>
      </div>
      <div class="col-6 d-flex justify-content-end">
        <label><input type="number" name="age"></label>
      </div>
      <div class="col-6 d-flex justify-content-start">
        <p>Êtes-vous un homme ou une femme ?</p>
      </div>
      <div class="col-4 d-flex justify-content-end">
        <label><input type="radio" name="gender" value="homme">Homme</label>
      </div>
      <div class="col-2 d-flex justify-content-end">
        <label><input type="radio" name="gender" value="femme">Femme</label>
      </div>
      <div class="col-12 d-flex justify-content-end">
        <input class="btn btn-primary btn-lg" name="commit" type="submit" value="Terminer" data-disable-with="Terminer"/>
      </div>
    </div>
  <% end %>
</div>
